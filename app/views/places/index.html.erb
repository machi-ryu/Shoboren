<div class="container">
<h1>場所一覧</h1>
<%= link_to "場所登録", new_place_path, class:"place-create btn btn-primary" %>
    <% @places.each do |place| %>
        <div class="place-item">
            <li>
                <div class="place-content">
                    <%= link_to place.name, place %>
                    <%= place.menu %>
                    <%= place.intention_state %>
                    <%= place.stime.strftime("%m/%d %a %H:%M〜") %><%= place.etime.strftime("%H:%M") %>
                </div>
                <%if current_user.joins.find_by(place_id: place.id).nil? %>
                    <%= form_for(current_user.joins.build) do |f| %>
                        <div><%= hidden_field_tag :place_id, place.id %></div>
                        <%= f.submit "参加", class:"btn btn-primary btn-attend" %>
                    <% end %>
                <% else%>
                    <%= form_for(current_user.joins.build) do |f| %>
                        <%= f.submit "参加予定", class:"btn btn-primary btn-grayout" %>
                    <% end %>
                <% end %>
                <%= @joins.where("place_id = (?)", place.id).count %> 人
            </li>
        </div>
    <% end %>
